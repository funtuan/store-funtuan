      </div>

      <div class="back-link">
        <a href="/">← 返回首頁</a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .terms-page {
    min-height: 100vh;
    padding: 4rem 0;
    background: linear-gradient(135deg, #fff0f5 0%, #ffe4f0 50%, #ffd6e8 100%);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
    color: white;
  }

  .page-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .last-updated {
    font-size: 0.9rem;
    opacity: 0.9;
  }

  .terms-content {
    background: white;
    border-radius: 16px;
    padding: 3rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  }

  .terms-section {
    margin-bottom: 2.5rem;
  }

  .terms-section:last-child {
    margin-bottom: 0;
  }

  .terms-section h2 {
    color: #ff85b3;
    font-size: 1.5rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .terms-section p {
    color: #4a5568;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .terms-section p:last-child {
    margin-bottom: 0;
  }

  .terms-section ul {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .terms-section li {
    color: #4a5568;
    line-height: 1.8;
    margin-bottom: 0.5rem;
  }

  .terms-section a {
    color: #ff85b3;
    text-decoration: none;
    font-weight: 500;
  }

  .terms-section a:hover {
    text-decoration: underline;
  }

  .back-link {
    text-align: center;
    margin-top: 3rem;
  }

  .back-link a {
    color: white;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
    opacity: 0.9;
    transition: opacity 0.3s ease;
  }

  .back-link a:hover {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .terms-page {
      padding: 2rem 0;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .terms-content {
      padding: 2rem 1.5rem;
    }

    .terms-section h2 {
      font-size: 1.3rem;
    }
  }
</style>
